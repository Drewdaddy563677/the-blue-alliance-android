<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_header_account">

        <SwitchPreference
            android:key="mytba_enabled"
            android:persistent="false"
            android:title="@string/is_mytba_enabled" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_header_notifications">
        <Preference
            android:key="notifications"
            android:persistent="false"
            android:title="@string/notification_settings" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_header_general">
        <ListPreference
            android:key="dark_mode"
            android:title="@string/pref_dark_mode"
            android:summary="@string/pref_dark_mode_summary"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_header_appinfo">
        <Preference
            android:key="tba_link"
            android:persistent="false"
            android:selectable="true"
            android:summary="@string/tbasite_summary"
            android:title="@string/tbasite_label" />

        <Preference
            android:key="github_link"
            android:persistent="false"
            android:selectable="true"
            android:summary="@string/github_summary"
            android:title="@string/github_label" />

        <Preference
            android:key="contributors"
            android:persistent="false"
            android:selectable="true"
            android:summary="@string/contributors_summary"
            android:title="@string/contributors" />

        <Preference
            android:key="changelog"
            android:persistent="false"
            android:selectable="true"
            android:title="@string/changelog" />

        <Preference
            android:key="app_version"
            android:persistent="false"
            android:selectable="true"
            android:title="@string/settings_build_info_label" />

        <Preference
            android:key="licenses"
            android:persistent="false"
            android:selectable="true"
            android:title="@string/license_label" />

    </PreferenceCategory>

</PreferenceScreen>